@model Product

<h2 class="text-danger">Delete Product</h2>

<p class="text-danger">Are you sure you want to delete this Product?</p>

<div>
    <h4>@Model.Title</h4>
</div>

<hr />

<div class="row">
    <div class="col-2">
        <h5>Price</h5>
    </div>
    <div class="col-10">@Model.Price</div>
</div>

<div class="row">
    <div class="col-2">
        <h5>Quantity</h5>
    </div>
    <div class="col-10">@Model.Quantity</div>
</div>

<div class="row">
    <div class="col-2">
        <h5>Description</h5>
    </div>
    <div class="col-10">@Model.Description</div>
</div>

<div class="row">
    <div class="col-2">
        <h5>Category</h5>
    </div>
    <div class="col-10">@Model.Category!.Name</div>
</div>

<hr />

<form action="~/Product/Delete/@Model.ProductId" method="post">
    <input type="hidden" name="confirm" value="Yes" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="~/Product/Index" class="btn btn-secondary">Cancel</a>
</form>