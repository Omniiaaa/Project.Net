@model Category

<h2 class="text-danger">Delete Category</h2>

<p class="text-danger">Are you sure you want to delete this Category?</p>

<div>
    <h4>@Model.Name</h4>
</div>

<hr />


<div class="row">
    <div class="col-2">
        <h5>Description</h5>
    </div>
    <div class="col-10">@Model.Description</div>
</div>


<hr />

<form action="~/Category/Delete/@Model.CategoryId" method="post">
    <input type="hidden" name="confirm" value="Yes" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="~/Category/Index" class="btn btn-secondary">Cancel</a>
</form>
